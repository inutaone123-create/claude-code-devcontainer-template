# Doxyfile テンプレート
# プロジェクト開始時に {{...}} を実際の値に置換してください。
# または /project:init を実行すれば自動置換されます。

#---------------------------------------------------------------------------
# プロジェクト情報
#---------------------------------------------------------------------------
PROJECT_NAME           = "{{PROJECT_TITLE}}"
PROJECT_NUMBER         = 1.0.0
PROJECT_BRIEF          = ""
OUTPUT_DIRECTORY       = docs/doxygen
OUTPUT_LANGUAGE        = Japanese

#---------------------------------------------------------------------------
# 入力
#---------------------------------------------------------------------------
INPUT                  = .
FILE_PATTERNS          = *.cpp *.c *.h *.hpp *.cs
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */build/* */obj/* */bin/* */.git/* */node_modules/* */target/*

#---------------------------------------------------------------------------
# 抽出設定
#---------------------------------------------------------------------------
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

#---------------------------------------------------------------------------
# HTML出力
#---------------------------------------------------------------------------
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_COLORSTYLE        = AUTO_DARK

#---------------------------------------------------------------------------
# XML出力（Sphinx/breathe 連携用）
#---------------------------------------------------------------------------
GENERATE_XML           = YES
XML_OUTPUT             = xml

#---------------------------------------------------------------------------
# LaTeX出力（不要なら NO）
#---------------------------------------------------------------------------
GENERATE_LATEX         = NO

#---------------------------------------------------------------------------
# 図・グラフ（graphviz が必要）
#---------------------------------------------------------------------------
HAVE_DOT               = YES
DOT_NUM_THREADS        = 4
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
UML_LOOK               = YES
DOT_IMAGE_FORMAT       = svg

#---------------------------------------------------------------------------
# ソースコードの埋め込み
#---------------------------------------------------------------------------
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
STRIP_CODE_COMMENTS    = NO

#---------------------------------------------------------------------------
# 警告
#---------------------------------------------------------------------------
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES
